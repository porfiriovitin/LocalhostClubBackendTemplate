generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  user
  admin
}

/// :: Default for login and auth.
model User {
    id BigInt @id @default(autoincrement())
    name String?
    role Role @default(user)
    email String @unique
    password String

    @@map("users")
}